@model Batch17_WebApp.Models.SalaryModel
@{
}

<h4>Add Salary For: @ViewBag.EmpName</h4>
<hr />
<h1>Employee Details</h1>
<div class="col">
    <div class="row">
        <div class="col">Employee Name :@ViewBag.EmpName</div>
        <div class="col">Employee Address :@ViewBag.EmpAddress</div>
        <div class="col">Employee Status :@ViewBag.EmpStatus</div>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Employee.ID" value="@ViewBag.EmpID" />
            <div class="form-group">
                <label asp-for="PayrunDate" class="control-label"></label>
                <input asp-for="PayrunDate" class="form-control" />
                <span asp-validation-for="PayrunDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<Status>()"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}